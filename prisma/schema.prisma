generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String
  cpf       String   @unique
  wage      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  workouts Workout[]

  @@map("employees")
}

model Member {
  id  Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  membership String
  cpf String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  workouts Workout[]

  @@map("members")
}

model Workout {
  id Int @id @default(autoincrement())
  name String
  description String?
  exercises Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  personalId Int?
  memberId Int?

  personal Employee? @relation(fields: [personalId], references: [id], onDelete: SetNull)
  member Member? @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@map("workout")
}
